{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["vue-src/**/*.ts", "vue-src/**/*.d.ts", "vue-src/**/*.tsx", "vue-src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
