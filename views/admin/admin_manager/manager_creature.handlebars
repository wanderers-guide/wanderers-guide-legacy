<div class="container">

    <div class="columns is-mobile is-centered is-vcentered pt-3 is-marginless">
        <div class="column is-5 is-paddingless">
            <h1 class="is-size-1 is-inline-block has-txt-value-string">Creature Manager</h1>
        </div>
        <div class="column is-3 is-paddingless">
            <a class="is-size-3 is-pulled-right" href="/admin/create/creature"><span
                    class="icon is-large has-text-info"><i class="fas fa-plus"></i></span></a>
        </div>

        <div class="column is-3 is-paddingless">
            <a id="button-import-manager" class="button is-info is-outlined">
                <label for="input-import-creature" class="cursor-clickable m-0">
                    <span class="is-p">Import</span>
                    <span class="icon">
                        <i class="fas fa-upload"></i>
                    </span>
                </label>
                <input id="input-import-creature" type="file" accept=".json" multiple/>
            </a>
        </div>

    </div>
    <hr>


    <div class="columns is-centered is-multiline mb-2">
        {{#each ancestries}}
        <div class="column is-4">
            <div class="card creature-card" name="{{id}}">
                <div class="card-content pt-2 pb-2 text-center">
                    <span class="is-size-4 has-txt-value-number">{{name}}</span>
                    <span class="is-size-5 has-txt-listing"> - {{version}}</span>
                    {{#ifEqual isArchived 1}}
                    <span class="icon is-medium has-txt-listing is-pulled-right">
                        <i class="fas fa-lg fa-archive"></i>
                    </span>
                    {{/ifEqual}}
                </div>
                <div class="card-footer is-paddingless">
                    <a class="card-footer-item creature-card-edit has-txt-listing">
                        <span class="is-size-6 pr-2">Update</span>
                        <span class="icon is-small">
                            <i class="fas fa-edit"></i>
                        </span>
                    </a>
                    <a class="card-footer-item creature-card-delete has-txt-listing">
                        <span class="is-size-6 pr-1">Delete</span>
                        <span class="icon is-small">
                            <i class="fas fa-trash"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="column">
            <p class="has-text-centered is-italic">No creatures exist!</p>
        </div>
        {{/each}}
    </div>

</div>

<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title is-size-4 has-txt-value-string">Delete creature</p>
            <button class="delete modal-card-close" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <p class="has-txt-value-string has-text-centered">Are you sure you want to delete this creature?</p>
        </section>
        <footer class="modal-card-foot is-paddingless p-3 field is-grouped is-grouped-centered">
            <p class="control">
                <a class="button is-danger is-outlined" id="delete-confirmation-btn">Delete</a>
            </p>
        </footer>
    </div>
</div>