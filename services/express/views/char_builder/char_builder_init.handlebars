                <option
                  value="12"
                  {{chooseSelection 12 character.level}}
                >12</option>
                <option
                  value="13"
                  {{chooseSelection 13 character.level}}
                >13</option>
                <option
                  value="14"
                  {{chooseSelection 14 character.level}}
                >14</option>
                <option
                  value="15"
                  {{chooseSelection 15 character.level}}
                >15</option>
                <option
