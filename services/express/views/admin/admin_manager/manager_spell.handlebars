<div class="container">

    <div class="columns is-mobile is-centered is-vcentered pt-3 is-marginless">
        <div class="column is-5 is-paddingless">
            <h1 class="is-size-1 is-inline-block has-txt-value-string">Spell Manager</h1>
        </div>
        <div class="column is-5 is-paddingless">
            <a class="is-size-3 is-pulled-right" href="/admin/create/spell"><span class="icon is-large has-text-info"><i class="fas fa-plus"></i></span></a>
        </div>
    </div>
    
    <hr class="m-2">

    <div class="columns is-mobile is-marginless pl-5 pb-2">
        <div class="column is-10">
            <p class="control has-icons-left">
                <input id="spellsSearch" class="input" type="text" placeholder="Search Spells">
                <span class="icon is-left">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </span>
            </p>
        </div>
        <div class="column">
            <div class="select">
                <select id="spellsFilterByLevel">
                    <option value="All">All</option>
                    <option value="0">Cantrip</option>
                    <option value="1">1st</option>
                    <option value="2">2nd</option>
                    <option value="3">3rd</option>
                    <option value="4">4th</option>
                    <option value="5">5th</option>
                    <option value="6">6th</option>
                    <option value="7">7th</option>
                    <option value="8">8th</option>
                    <option value="9">9th</option>
                    <option value="10">10th</option>
                </select>
            </div>
        </div>
    </div>

    <div class="columns mx-5 is-centered is-multiline mb-2 use-custom-scrollbar" style="height: 600px; max-height: 600px; overflow-y: auto;">
        {{#each spells}}
            <div class="column is-12 entryListing border-bottom border-dark" name="{{id}}" data-entry-name="{{name}}" data-entry-level="{{level}}">
                <div class="columns">
                    <div class="column is-paddingless p-1 pl-2 is-8 entry-main">
                        <sup class="is-size-7 has-txt-noted">{{level}}: </sup>
                        <span class="is-size-5 has-txt-value-number">{{name}}</span>
                        <span class="is-size-6 has-txt-listing"> - {{version}}</span>
                        <sup class="is-size-7 has-txt-noted is-italic">{{id}}</sup>
                        {{#ifEqual isArchived 1}}
                            <span class="icon is-medium has-txt-listing is-pulled-right">
                                <i class="fas fa-lg fa-archive"></i>
                            </span>
                        {{/ifEqual}}
                    </div>
                    <div class="column is-paddingless p-1 pt-2 is-2 entry-update cursor-clickable text-center has-txt-listing">
                        <span class="is-size-6 pr-2">Update</span>
                        <span class="icon is-small">
                            <i class="fas fa-edit"></i>
                        </span>
                    </div>
                    <div class="column is-paddingless p-1 pt-2 is-2 entry-delete cursor-clickable text-center has-txt-listing">
                        <span class="is-size-6 pr-1">Delete</span>
                        <span class="icon is-small">
                            <i class="fas fa-trash"></i>
                        </span>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="column">
                <p class="has-text-centered is-italic">No spells exist?!</p>
            </div>
        {{/each}}
    </div>

</div>

<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title is-size-4 has-txt-value-string">Delete Spell</p>
            <button class="delete modal-card-close" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <p class="has-txt-value-string has-text-centered">Are you sure you want to delete this spell?</p>
        </section>
        <footer class="modal-card-foot is-paddingless p-3 field is-grouped is-grouped-centered">
            <p class="control">
                <a class="button is-danger is-outlined" id="delete-confirmation-btn">Delete</a>
            </p>
        </footer>
    </div>
</div>